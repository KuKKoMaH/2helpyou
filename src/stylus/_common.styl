html
  font-family: 'Montserrat', sans-serif;
  color: $black
  font-size: 18px
  line-height: 1.65
  font-weight: 400

html, body
  overflow-x: hidden

b
  font-weight: bold

p
  margin-bottom: 1.55em

//a
//  color: #e21d2b
//
//  &:hover
//    color: darken(#e21d2b, 30%)
//    text-decoration: underline;

h1, h2
  font-weight: 800
  letter-spacing 1px

  span
    color: $blue

h1
  font-size: 42px
  line-height: 1.3
  @media (max-width: $breakpoint-md - 1)
    font-size: 32px
    line-height: 1.45

h2
  font-size: 32px
  @media (max-width: $breakpoint-md - 1)
    font-size: 20px
    line-height: 1.5

ul, ol
  margin-bottom: 1.55em

  li
    margin-bottom: 1em
    position relative

ul
  li
    padding-left: 22px

    &:before
      content: ''
      width: 7px
      height: 7px
      background: #e43641
      border-radius: 50%
      position absolute
      top: .6em;
      left: 2px;

ol
  counter-reset: list;

  li
    padding-left: 24px

    &:before
      counter-increment: list;
      content: counter(list) "."
      position absolute
      top: 0;
      left: 2px;
      color: #d73436
      font-weight: bold;

del, s
  text-decoration: line-through

.c
  padding: 0 15px
  margin-left: auto
  margin-right: auto
  max-width: $container-lg
  width: 100%
  @media (max-width: $breakpoint-lg - 1)
    max-width: $container-md
    padding: 0 15px
  @media (max-width: $breakpoint-md - 1)
    max-width: 100%
    padding: 0 20px


.page
  //anim(.2s)
  min-height 100vh
  display: flex
  flex-direction column
  will-change filter

  &.mfp-body-open
    filter: blur(10px)
    overflow: hidden

.lazy
  visibility: hidden
  opacity: 0

  &.lazy--visible
    visibility: visible
    opacity: 1

img[data-src],
img[data-srcset]
  //display: block;
  min-height: 1px;

.hidden
  display: none

#sprites
  position: absolute
  width: 0
  height: 0
  top: 0
  left: 0

.center
  text-align: center;

.paroller
  will-change: transform;
  transition: transform 0.1s ease-out !important;
  @media (pointer: coarse)
    transition none !important
