.problems
  background: url(./problems-bg.jpg) 50% 50% no-repeat
  background-size: cover
  padding: 86px 0 100px
  @media (max-width: $breakpoint-md - 1)
    padding: 52px 0 40px

  &__inner
    max-width 797px
    padding: 0 15px
    margin: 0 auto
    position: relative;

  &__title
    color: #ffffff
    margin-bottom: 85px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 36px

  &__items
    position: relative;
    z-index: 1

  &__item
    margin-bottom: 32px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 28px

    &:last-child
      margin-bottom: 0

    &--active
      & .problems
        &__panel
          background: #2e9bdb
          color: #ffffff

          &:before
            background: #2f434e

          &:after
            background: #30627f

        &__text
          opacity: 1

        &__arrow
          opacity: 1
          right: -18px
          background: #2e9bdb
          @media (max-width: $breakpoint-md - 1)
            right: 50%
            top: -18px

  &__panel
    width: 270px
    height: 72px
    font-size: 13px
    text-align: center;
    display: flex;
    align-items center
    justify-content center
    padding: 0 20px
    cursor: pointer;
    @media (max-width: $breakpoint-md - 1)
      width: 100%

  &__text
    position: absolute;
    max-height 0
    overflow: hidden;
    left: 315px
    right: 0
    opacity: 0
    transition max-height .3s ease-out, opacity .3s ease-out

    @media (max-width: $breakpoint-md - 1)
      position: static;

  &__content
    background: rgba(#fff, .1)
    border-radius: 10px
    color: #ffffff
    font-size: 16px
    padding: 34px 39px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 35px
      font-size: 13px
      line-height: 1.75

      .btn
        width: 100%

  &__arrow
    position: absolute;
    width: 44px
    height: 44px
    background: #ffffff
    border-radius: 50%
    opacity: 0
    pointer-events none
    anim()
    display: flex;
    align-items center
    justify-content center
    top: 50%
    margin-top: -22px
    right: 0
    z-index: -1
    @media (max-width: $breakpoint-md - 1)
      top: 0
      margin-top: 0
      right: 50%
      margin-right: -22px

    svg
      height: 12px
      width: 100%
      fill: #ffffff
      transform rotate(180deg)
      margin-left: 16px
      @media (max-width: $breakpoint-md - 1)
        transform rotate(90deg)
        margin-left: 0
        margin-bottom: 10px
