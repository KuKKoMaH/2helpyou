.menu
  background: $black
  position: fixed;
  left: 0
  top: 0
  width: 100%
  height: 60px
  display: flex;
  align-items center
  justify-content space-between
  color: #fff
  z-index: 11
  @media (max-width: $breakpoint-lg - 1)
    height: 50px
    padding-right: 10px

  .c
    height: 100%

  &__menu
    width: 100%
    @media (max-width: $breakpoint-lg - 1)
      position: fixed;
      top: 50px
      bottom: 0
      left: 0
      width: 100%
      background: #292929
      opacity: 0
      transform translateY(-50px)
      pointer-events none
      z-index: -1
      anim()

    ul
      display: flex
      align-items: center
      height: 100%
      margin: 0
      @media (max-width: $breakpoint-lg - 1)
        flex-direction column
        justify-content center
        align-items center

    li
      margin: 0
      padding: 0 35px 0 0
      @media (max-width: $breakpoint-lg - 1)
        padding: 0 0 25px

      &:before
        display: none;

    a
      font-size: 13px
      font-weight: 500
      border-bottom: 1px solid #5c5c5c;
      padding-bottom: 4px
      anim()

      &:hover
        border-bottom: 1px solid #2e9bdb;

  &__button
    display: none;
    width: 50px
    height: 50px
    position: relative;
    background: rgba(#fff, .05);
    anim();

    @media (max-width: $breakpoint-lg - 1)
      display: block;

    &:hover
      background: rgba(#fff, .2);

  svg
    width: 22px
    height: 22px
    fill: #ffffff

  //&__hamburger

  &__close
    opacity: 0

  &__hamburger,
  &__close
    position: absolute;
    top: 50%
    left: 50%
    margin-top: -11px
    margin-left: -11px
    anim()

  &__phone
    display: none;
    font-size: 12px
    @media (max-width: $breakpoint-lg - 1)
      display: block;

  &__call
    display: none;
    @media (max-width: $breakpoint-lg - 1)
      display: block;

  &--active &
    &__hamburger
      opacity: 0

    &__close
      opacity: 1

    &__menu
      opacity: 1
      transform translateY(0)
      pointer-events all
