.hero
  background: url(./hebo-bg.jpg) 50% 50% no-repeat
  background-size: cover
  padding: 90px 0 80px
  margin-top: 164px
  color: #ffffff
  @media (max-width: $breakpoint-md - 1)
    margin-top: 141px
    padding: 50px 0 40px

  .c
    display: flex;
    align-items center
    justify-content space-between
    position: relative
    z-index: 1
    @media (max-width: $breakpoint-md - 1)
      flex-direction column
      text-align: center;

  &__main
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 26px

  &__title
    margin-bottom: 32px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 13px

  &__subtitle
    font-weight: 300
    font-style italic
    margin-bottom: 43px
    @media (max-width: $breakpoint-md - 1)
      font-size: 14px
      margin-bottom: 24px

  &__image
    @media (max-width: $breakpoint-lg - 1)
      display: none;
    @media (max-width: $breakpoint-md - 1)
      display: block;
      max-height 230px
      width: auto;
      margin-bottom: 36px

  &__aside
    width: 270px
    flex-shrink 0
    @media (max-width: $breakpoint-md - 1)
      width: 100%
      max-width 320px

  //  position: relative;
  //  z-index: 1

  &__panel
    display: block;
    color: $black
    font-size: 13px
    margin-bottom: 67px
    padding: 26px 0px
    text-align: center;
    @media (max-width: $breakpoint-md - 1)
      font-size: 11px
      padding: 15px 0
      margin-bottom: 48px

    &:last-child
      margin-bottom: 0

    span
      color: $blue

    &:hover
      text-decoration: underline;

  &__icon
    position: absolute;
    left: 50%
    margin-left: -25px
    top: 0
    margin-top: -25px
    background: #ffffff
    width: 50px
    height: 50px
    display: flex;
    align-items center
    justify-content center
    border-radius: 50%
    @media (max-width: $breakpoint-md - 1)
      width: 40px
      height: 40px
      margin-top: -20px
      margin-left: -20px

    svg
      width: 24px
      height: 24px
      fill $blue
