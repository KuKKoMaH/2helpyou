.bullets
  background: #f5f5f5
  padding: 86px 0 100px
  position: relative;
  z-index: 1
  @media (max-width: $breakpoint-md - 1)
    padding: 50px 0 60px

  &__title
    text-align: center;
    margin-bottom: 84px
    @media (max-width: $breakpoint-md - 1)
      text-align: left;
      margin-bottom: 53px
      span
        display: block;

  &__items
    display: flex;
    align-items flex-start
    margin: 0 -15px 93px
    @media (max-width: $breakpoint-md - 1)
      left: 0
      flex-direction column
      margin: 0

  &__item
    flex: 1
    padding-left: 32px
    margin: 0 15px
    position: relative;
    @media (max-width: $breakpoint-md - 1)
      padding-left: 22px
      margin: 0 0 56px

    &:before
      content: ''
      display: block;
      position: absolute;
      background: #e7eef2
      width: 2px
      height: 100%
      left: 0
      top: 0

  &__icon
    margin-bottom: 17px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 0

    svg
      width: 50px
      height: 50px
      fill: $blue
      @media (max-width: $breakpoint-md - 1)
        width: 40px
        height: 40px

  &__name
    font-size: 32px
    margin-bottom: 20px
    @media (max-width: $breakpoint-md - 1)
      font-size: 26px
      margin-bottom: 3px

  &__text
    font-size: 15px
    font-weight: 300
    font-style italic
    @media (max-width: $breakpoint-md - 1)
      font-size: 11px

  &__button
    max-width 430px
    margin: 0 auto

    .btn
      width: 100%
