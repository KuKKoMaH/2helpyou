.map
  padding: 100px 0 100px
  @media (max-width: $breakpoint-md - 1)
    padding: 0

  &__map
    height: 660px
    border-radius: 10px
    background: #f5f5f5
    overflow: hidden;
    @media (max-width: $breakpoint-md - 1)
      margin: 0 -20px
      width: auto;
      height: 450px

  &__balloon
    padding: 20px 29px
    width 310px
    position: absolute;
    anim()

    &:after
      background: #f3f3f0

    &:before
      background: #dde1d8

  &__title
    font-weight: 900
    margin-bottom: 20px
    &:before
      content: ''
      display: block;
      position: absolute;
      bottom: 100%
      left: 50%
      margin-left: -15px
      width: 0;
      height: 0;
      border-style: solid;
      border-width: 0 15px 15px 15px;
      border-color: transparent transparent #fff transparent;

  &__address
    padding-left: 20px
    position: relative;
    font-size: 13px
    line-height: 1.75


  &__geo
    position: absolute;
    height: 15px
    width: 12px
    fill: $blue
    left: 0
    top: 2px
